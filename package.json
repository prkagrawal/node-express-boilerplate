{
  "name": "node",
  "version": "1.0.0",
  "description": "This is a boilerplate code for node and express backend using mongodb database",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "format": "prettier --write \"**/*.{js,jsx,css,scss}\""
  },
  "keywords": [
    "boilerplate",
    "node",
    "express"
  ],
  "author": "Prince Agrawal",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.11.10"
  },
  "devDependencies": {
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css}": [
      "npm run format"
    ]
  }
}
